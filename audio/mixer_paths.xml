<mixer>
  <!-- These are the initial mixer settings -->
  <ctl name="Capture Switch" value="0" />
  <ctl name="Sampling Rate Switch" value="0" />
  <ctl name="Playback Switch" value="0" />
  <ctl name="CODEC Power Switch" value="0" />

  <path name="speaker">
    <ctl name="Playback Switch" value="1" /> <!-- Speaker_normal -->
    <ctl name="CODEC Power Switch" value="1" />
    <ctl name="Sampling Rate Switch" value="10" /> <!-- 10 = 44100 Hz -->
  </path>

  <path name="headphone">
    <ctl name="Playback Switch" value="6" /> <!-- Headset_normal -->
    <ctl name="CODEC Power Switch" value="1" />
    <ctl name="Sampling Rate Switch" value="10" /> <!-- 10 = 44100 Hz -->
  </path>

  <path name="mic">
    <ctl name="Capture Switch" value="1" /> <!-- MIC_normal -->
    <ctl name="CODEC Power Switch" value="1" />
    <ctl name="Sampling Rate Switch" value="10" /> <!-- 10 = 44100 Hz -->
  </path>

</mixer>

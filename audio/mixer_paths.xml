<mixer>
  <!-- These are the initial mixer settings -->
  <ctl name="Capture Switch" value="OFF" />
  <ctl name="Sampling Rate Switch" value="44.1kHz" />
  <ctl name="Playback Switch" value="OFF" />
  <ctl name="CODEC Power Switch" value="0" />

  <path name="speaker">
    <ctl name="CODEC Power Switch" value="1" />
    <ctl name="Playback Switch" value="Speaker_normal" />
    <ctl name="Sampling Rate Switch" value="44.1kHz" />
  </path>

  <path name="headphone">
    <ctl name="CODEC Power Switch" value="1" />
    <ctl name="Playback Switch" value="Headset_normal" />
    <ctl name="Sampling Rate Switch" value="44.1kHz" />
  </path>

  <path name="mic">
    <ctl name="CODEC Power Switch" value="1" />
    <ctl name="Capture Switch" value="MIC_normal" />
    <ctl name="Sampling Rate Switch" value="44.1kHz" />
  </path>

</mixer>
